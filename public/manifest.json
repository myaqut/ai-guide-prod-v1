{
  "manifest_version": 3,
  "name": "LeanIX AI Recommendations",
  "version": "1.0.0",
  "description": "AI-powered recommendations for LeanIX catalog fields",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.leanix.net/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "LeanIX AI Recommendations"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.leanix.net/*"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
